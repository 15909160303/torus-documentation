{
  // Code style
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Misc
  "javascript.suggestionActions.enabled": false,
  "files.exclude": {
    "node_modules": true,
    "yarn.lock": true,
    ".docusaurus": true
  },
  "cSpell.words": [
    "Avenir",
    "Metamask's",
    "Torus's",
    "browserslist",
    "clsx",
    "hoverable",
    "jitpack",
    "metastring",
    "nodir",
    "openlogin",
    "palenight",
    "passwordless",
    "toruslabs",
    "torusresearch"
  ]
}
